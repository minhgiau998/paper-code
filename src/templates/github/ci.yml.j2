name: CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4

    # --- NODE.JS / FRONTEND ---
    {% if tech_stack | default("") and ("Node" in tech_stack or "React" in tech_stack or "Vue" in tech_stack or "Next" in tech_stack) %}
    - name: Use Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '22.x'
        cache: 'npm'
    
    - name: Install dependencies
      run: npm ci

    - name: Build
      run: npm run build --if-present

    - name: Test
      run: npm test
    {% endif %}

    # --- PYTHON / BACKEND ---
    {% if tech_stack | default("") and ("Python" in tech_stack or "FastAPI" in tech_stack or "Django" in tech_stack) %}
    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: '3.12'
        cache: 'pip'

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        if [ -f requirements.txt ]; then pip install -r requirements.txt; fi

    - name: Test
      run: |
        {% if tech_stack | default("") and "Django" in tech_stack %}
        python manage.py test
        {% else %}
        pytest
        {% endif %}
    {% endif %}

    # --- GO ---
    {% if tech_stack | default("") and "Go" in tech_stack %}
    - name: Set up Go
      uses: actions/setup-go@v5
      with:
        go-version: '1.22'

    - name: Build
      run: go build -v ./...

    - name: Test
      run: go test -v ./...
    {% endif %}

    # --- RUST ---
    {% if tech_stack | default("") and "Rust" in tech_stack %}
    - name: Build
      run: cargo build --verbose
    - name: Run tests
      run: cargo test --verbose
    {% endif %}